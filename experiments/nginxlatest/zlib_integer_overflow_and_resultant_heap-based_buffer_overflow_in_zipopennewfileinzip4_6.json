{
    "version": "1.0.0",
    "title": "Chaos Experiment",
    "description": "An example of chaos experiment",
    "tags": [
        "example",
        "chaos"
    ],
    "steady-state-hypothesis": {
        "title": "System is healthy",
        "probes": [
            {
                "type": "probe",
                "name": "system-is-healthy",
                "provider": {
                    "type": "http",
                    "url": "http://my-actual-service/health",
                    "timeout": 3
                },
                "tolerance": [200, 299]
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "terminate-instance",
            "provider": {
                "type": "python",
                "module": "chaosaws.ec2.actions",
                "func": "terminate_instance",
                "arguments": {
                    "instance_id": "i-1234567890abcdef0",
                    "az": "us-west-2"
                }
            },
            "pauses": {
                "after": 30
            }
        }
    ]
}
